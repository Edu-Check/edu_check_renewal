# 빌드 단계
FROM node:23-alpine AS build

ARG VITE_API_URL
ENV VITE_API_URL=$VITE_API_URL

ARG VITE_APP_URL
ENV VITE_APP_URL=$VITE_APP_URL

ARG VITE_HOLIDAY_API_KEY
ENV VITE_HOLIDAY_API_KEY=$VITE_HOLIDAY_API_KEY

ARG VITE_HOLIDAY_BASE_URL
ENV VITE_HOLIDAY_BASE_URL=$VITE_HOLIDAY_BASE_URL

ARG VITE_AUTH_DOMAIN
ENV VITE_AUTH_DOMAIN=$VITE_AUTH_DOMAIN

ARG VITE_PROJECT_ID
ENV VITE_PROJECT_ID=$VITE_PROJECT_ID

ARG VITE_STORAGE_BUCKET
ENV VITE_STORAGE_BUCKET=$VITE_STORAGE_BUCKET

ARG VITE_MESSAGING_SENDER_ID
ENV VITE_MESSAGING_SENDER_ID=$VITE_MESSAGING_SENDER_ID

ARG VITE_APP_ID
ENV VITE_APP_ID=$VITE_APP_ID

ARG VITE_MEASUREMENT_ID
ENV VITE_MEASUREMENT_ID=$VITE_MEASUREMENT_ID

ARG VITE_VAPID_KEY
ENV VITE_VAPID_KEY=$VITE_VAPID_KEY

WORKDIR /app

COPY package.json package-lock.json ./

RUN npm ci

COPY . .

RUN npm run build

# 실행 단계
FROM nginx:mainline-alpine-slim

COPY --from=build /app/dist /usr/share/nginx/html
COPY nginx.conf /etc/nginx/nginx.conf
COPY ./templates /etc/nginx/templates

EXPOSE 80 443
CMD ["nginx", "-g", "daemon off;"]